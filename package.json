{
  "name": "o-ui-ldf",
	"description": "OUI移动端VUE前端UI库 A mobile UI components Library with Vue.js",
  "prefix": "O",
  "version": "0.2.1",
  "author": "laodifang <47121862@qq.com>",
  "keywords": [
    "o-ui",
    "oui"
  ],
  "private": false,
  "main": "lib/index.umd.js",
  "style": "lib/index.css",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:css": "gulp build --gulpfile gulpfile.js",
    "build:component": "webpack --config webpack.component.js",
    "git": "git add -A && git commit -m 'basic construction' && git push",
    "lib": "vue-cli-service build --target lib --name index --dest lib src/index.js && npm run build:component",
    "inspect": "vue-cli-service inspect",
    "new:c": "node utils/createComponent.js",
    "new:demo": "node utils/createDemo.js",
    "lint": "vue-cli-service lint",
		"pub": "npm publish --registry http://registry.npmjs.org"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "normalize.css": "^8.0.1",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "fs": "^0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-cssmin": "^0.2.0",
    "gulp-postcss": "^8.0.0",
    "gulp-stylus": "^2.7.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-load-config": "^2.1.0",
    "postcss-plugin": "^1.0.0",
    "postcss-px-to-viewport": "^1.1.1",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8.0"
  ]
}
