// o__element--modifier
@import '../../base'
.o
	&-pop-toast
		text-align center
		&__cont
			display inline-block
			padding 1em
			margin 1em
			color white
			background rgba(0,0,0,.8)
			border-radius .25em
			.icon
				margin 0 auto
				text-align center
				max-width 5em
				padding-bottom 20px
				img
					max-width 100%
	&-pop-alert
		&__cont
			background #fff
			border-radius .25em
			overflow hidden
			min-width 70vw
			text-align center
			.title
				font-size 44px
				padding 30px 20px 20px 20px
			.content
				color gray
				padding 0 20px
				min-height 4em
				display flex
				align-items center
				justify-content center
			.footer
				display flex
				margin-top 20px
				.btn
					flex 1
					padding 20px
					// font-weight 700
					font-size 32px
					user-select none
					// letter-spacing .25em
					color var(--desc)
					&:active
						background var(--bg)
					&:nth-child(1)
						color var(--main)
	&-pop-loading
		text-align center
		padding 30px
		border-radius 8px
		&__cont
			.loading
				padding-bottom 20px
			