[tag]
  display inline-block
  padding 0 .8em
  font-size 75%
  height $s
  line-height $s
  text-align center
  white-space nowrap
  vertical-align baseline
  box-sizing border-box
  background var(--line)
[tag~='fit']
  min-width $m
[tag~='plat']
  background none
  border 1px solid currentColor

[tag~='sup'],[tag~='sub']
  position relative
  line-height 0
  border-radius 99px
  padding .1em .3em
  height auto 
  line-height 1

[tag~='sup']
  top -.6em
  // vertical-align super
[tag~='sub']
  bottom -.25em
  // vertical-align sub
[tag~='dot']
  padding 0
  width .5rem
  height .5rem
  border-radius 99px