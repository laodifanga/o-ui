// main info success warning fail black title cont desc disabled border line bg white 
:root {
	--main: #327ede;
	--info: #2db6e8;
	--success: #42b983;
	--warning: #ff9800;
	--fail: #f44336;

	--l_main: #e6eff9;
	--l_info: #f0faff;
	--l_success: #edfff3;
	--l_warning: #fff9e6;
	--l_fail: #ffefe6;

	--black: #333;
	--title: #16233e;
	--sub: #7a8f9a;
	--cont: #4f596e;
	--desc: #9eacb6;
	--disabled: #c3c6cd;
	--placeholder: #dae0ef;
	--border: #dedfe3;
	--line: #e9ebec;
	--bg: #f8f8f8;
	--white: #fff;

	--l_black: #eee;
	--l_title: #d7e4ff;
	--l_sub: #ebf8ff;
	--l_cont: #d2def5;
	--l_desc: #e4ebff;
	--l_disabled: #f2f6ff;
	--l_placeholder: #f0f4ff;
	--l_border: #fafbff;
	--l_line: #f4f5f5;
	--l_bg: #fbfbfb;
}

[color~='bgmain'] { background: var(--main) }
[color~='bginfo'] { background: var(--info) }
[color~='bgsuccess'] { background: var(--success) }
[color~='bgwarning'] { background: var(--warning) }
[color~='bgfail'] { background: var(--fail) }
[color~='bgblack'] { background: var(--black) }
[color~='bgtitle'] { background: var(--title) }
[color~='bgsub'] { background: var(--sub) }
[color~='bgcont'] { background: var(--cont) }
[color~='bgdesc'] { background: var(--desc) }
[color~='bgdisabled'] { background: var(--disabled) }
[color~='bgplaceholder'] { background: var(--placeholder) }
[color~='bgborder'] { background: var(--border) }
[color~='bgline'] { background: var(--line) }
[color~='bgbg'] { background: var(--bg) }
[color~='bgwhite'] { background: var(--white) }

[color~='main'] { color: var(--main) }
[color~='info'] { color: var(--info) }
[color~='success'] { color: var(--success) }
[color~='warning'] { color: var(--warning) }
[color~='fail'] { color: var(--fail) }
[color~='black'] { color: var(--black) }
[color~='title'] { color: var(--title) }
