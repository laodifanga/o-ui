	&[color~='bgmain'] { background: var(--l_main) }
	&[color~='bginfo'] { background: var(--l_info) }
	&[color~='bgsuccess'] { background: var(--l_success) }
	&[color~='bgwarning'] { background: var(--l_warning) }
	&[color~='bgfail'] { background: var(--l_fail) }
	&[color~='bgblack'] { background: var(--l_black) }
