@import '../base'



[avatar] {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  width: $m;
  height: $m;
  line-height: $m;
  text-align: center;
  z-index: 1;
	background: var(--bg, grey);
}

[avatar~=s]
  width $s
  height $s
  line-height $s

// [avatar~=m]
//   width 112px
//   height 112px
//   line-height 112px

[avatar~=l]
  width $l
  height $l
  line-height $l

[avatar~=group]
  width auto
  height auto
  display flex
  background none
  [avatar]
    display block
    border 1px solid rgba(255,255,255,.75)
    &:not(:first-child)
      margin-left -($m / 3)
    &:first-child
      margin-left 0
  [avatar~=s]
    &:not(:first-child)
      margin-left -($s / 2)
  [avatar~=l]
    &:not(:first-child)
      margin-left -($l / 3.5)

[avatar~=reverse]
  justify-content flex-end
  direction rtl
  unicode-bidi bidi-override
  [avatar]
    margin-left -($m / 3)
    &:last-child
      margin-left 0
    &:first-child
      margin-left -($m / 3)
    
  [avatar~=s]
    margin-left -($s / 2)
    &:first-child
      margin-left -($s / 2)
  [avatar~=l]
    margin-left -($l / 3.5)
    &:first-child
      margin-left -($l / 3.5)
[avatar~=hover]
  [avatar]
    &:hover
      z-index 2