// -------------- 间隔 12 14 16为基数的黄金分割算法
sizes = 12 20 32 50 14 22 36 60 16 26 42 68
for n,i in sizes
  [text~=\'{n}\']
    if n == 12
      font-size 12 * 2px
    else
      font-size n * 2px
[text~='sm']
  display inline-block
  font-size 12px * 2
  transform scale(.85)
  transform-origin left center

[text~=b]
  font-weight 700
[text~=i]
  font-style italic

[text~='tl']
  text-align left
[text~='tc']
  text-align center
[text~='tr']
  text-align right
[text~='tj']
  text-align-last justify
  text-align justify


[text~='vm']
  vertical-align middle

[text~='ell']
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
[text~='ell2'] 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;


[text~='x']
  overflow-x auto
  white-space nowrap

[text~='y']
  overflow-y auto

[text~='auto']
  overflow auto

[text~='hidden']
  overflow hidden

[text~='wrap']
  word-wrap break-word
  word-break break-all
[text~='nowrap']
  white-space nowrap

[text~='capitalize']
  text-transform capitalize
[text~='upper']
  text-transform uppercase
[text~='lower']
  text-transform lowercase