// -------------- 间隔 text="12 14 16 20 24 28 32 36 40 48 56 64 72"
sizes = 12 13 14 16 20 24 28 32 36 40 48 56 64 72
for n,i in sizes
  [text~=\'{n}\']
    if n == 12
      font-size 12 * 2px
    else
      font-size n * 2px
[text~='sm']
  display inline-block
  font-size 12px * 2
  transform scale(.85)
  transform-origin left center

[text~=b]
  font-weight 700
[text~=i]
  font-style italic

// [text~=ss]
//   font-family "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif

[text~='tl']
  text-align left
[text~='tc']
  text-align center
[text~='tr']
  text-align right
[text~='tj']
  text-align-last justify
  text-align justify


[text~='vm']
  vertical-align middle

[text~='ell']
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
[text~='ell2'] {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    /*! autoprefixer: off */
    -webkit-box-orient: vertical;
    /* autoprefixer: on */
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

[text~='x']
  overflow-x auto
  white-space nowrap

[text~='y']
  overflow-y auto

[text~='auto']
  overflow auto

[text~='wrap']
  word-wrap break-word
  word-break break-all
[text~='nowrap']
  white-space nowrap

[text~='c']
  text-transform capitalize
[text~='u']
  text-transform uppercase
[text~='l']
  text-transform lowercase