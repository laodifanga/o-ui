[border]
  border 1px solid var(--silver)
[border~='c']
  border 1px solid currentColor

[border~='dashed']
  border-style dashed
[border~='dotted']
  border-style dotted
[border~='line']
  border-color var(--silver10)

[border~='t'],
[border~='r'],
[border~='b'],
[border~='l']
  border-color transparent

[border~='t']
  border-top-color var(--silver)
  &[border~='line']
    border-top-color var(--silver10)

[border~='r']
  border-right-color var(--silver)
  &[border~='line']
    border-right-color var(--silver10)
[border~='b']
  border-bottom-color var(--silver)
  &[border~='line']
    border-bottom-color var(--silver10)
[border~='l']
  border-left-color var(--silver)
  &[border~='line']
    border-left-color var(--silver10)

[border~='c']
  &[border~='t']
    border-top-color currentColor
  &[border~='r']
    border-right-color currentColor
  &[border~='b']
    border-bottom-color currentColor
  &[border~='l']
    border-left-color currentColor


