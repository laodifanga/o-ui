[loading]
  display inline-block
  vertical-align middle
  width 48px
  height 48px
  border 6px solid rgba(150,150,150,.5)
  border-top-color currentColor
  border-radius 9999px
  animation oSpin $transTime * 2 linear infinite
  &[loading~='full']
    border 6px solid currentColor
    border-top-color rgba(150,150,150,.5)
  &[loading~='s']
    width 32px
    height 32px
    border-width 4px
  &[loading~='m']
    width 40px
    height 40px
    border-width 5px
  &[loading~='l']
    width 72px
    height 72px
    border-width 9px
